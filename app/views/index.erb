
<div class="homepage-container">
 <div class="row">

  <div class="col-md-6 surveys-taken-container">
    <div class="panel panel-success">
      <div class="panel-heading text-center">
        <h3 class="panel-title">Surveys Taken</h3>
      </div>
      <div class="panel-body">

        <% @surveys_taken.each do |survey| %>
        <a class="thumbnail-link" href="<%= survey_url(survey) + "/results" %>">
          <div class="thumbnail">
            <img src="<%= survey.image %>" alt="">
            <div class="caption text-center">
              <h3><%= survey.title %></h3>
            </div>
          </div>
        </a>
        <% end %>

      </div>
    </div>
  </div>

  <div class="col-md-6 surveys-created-container">
    <div class="panel panel-info">
      <div class="panel-heading text-center">
        <h3 class="panel-title">Surveys Created</h3>
      </div>
      <div class="panel-body">

        <% @surveys_created.each do |survey| %>
        <a class="thumbnail-link" href="<%= survey_url(survey) + "/results" %>">
          <div class="thumbnail">
            <img src="<%= survey.image %>" alt="">
            <div class="caption text-center">
              <h3><%= survey.title %></h3>
            </div>
          </div>
          </a>
        <% end %>

      </div>
    </div>
  </div>

 </div>
</div>


